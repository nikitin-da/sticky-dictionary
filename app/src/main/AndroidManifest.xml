<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.nikitin_da.sticky_dictionary">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="com.github.nikitin_da.sticky_dictionary.App"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.gms.version"
                   android:value="@integer/google_play_services_version"/>

        <activity android:name="com.github.nikitin_da.sticky_dictionary.ui.activity.MainActivity"
                  android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name="com.github.nikitin_da.sticky_dictionary.ui.activity.GroupListActivity"/>

        <activity android:name="com.github.nikitin_da.sticky_dictionary.ui.activity.OneGroupWordListActivity"/>

        <activity android:name="com.github.nikitin_da.sticky_dictionary.ui.activity.WordSubmitActivity"
                  android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>

        <activity android:name="com.github.nikitin_da.sticky_dictionary.ui.activity.GroupSubmitActivity"
                  android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>

        <activity android:name="com.github.nikitin_da.sticky_dictionary.ui.activity.PagerActivity"
            android:label="@string/navigation_drawer_item_check"/>

        <activity android:name="com.github.nikitin_da.sticky_dictionary.ui.activity.GroupListForAddWordActivity"/>

        <provider
            android:name="com.github.nikitin_da.sticky_dictionary.storage.AppContentProvider"
            android:authorities="com.github.nikitin_da.sticky_dictionary.storage.content_provider"
            android:exported="false"/>

    </application>

</manifest>
