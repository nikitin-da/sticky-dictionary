<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_group_bg"
    android:orientation="vertical"
    android:padding="10dp"
    android:stateListAnimator="@anim/fab_anim">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.example.dmitry.handheld_dictionary.ui.view.TypefaceTextView
            android:id="@+id/group_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            style="@style/ListItemText"
            android:gravity="left"
            android:paddingTop="10dp"/>

        <com.example.dmitry.handheld_dictionary.ui.view.TypefaceTextView
            android:id="@+id/group_date"
            android:layout_width="wrap_content"
            style="@style/ListItemText"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="10dp"
            android:textSize="15sp"
            app:typefaceFromAssets="fonts/Roboto-Thin.ttf"/>

    </LinearLayout>

    <com.example.dmitry.handheld_dictionary.ui.view.EllipsizingTextView
        android:id="@+id/group_words"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:gravity="center"
        app:typefaceFromAssets="fonts/Roboto-MediumItalic.ttf"
        android:paddingTop="10dp"
        android:ellipsize="end"
        android:maxLines="2"/>

</LinearLayout>
