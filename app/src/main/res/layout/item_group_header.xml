<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/item_group_header_bg"
    android:minHeight="48dp"
    android:padding="10dp"
    android:gravity="center_vertical">

    <com.example.dmitry.handheld_dictionary.ui.view.TypefaceTextView
        android:id="@+id/group_header_name"
        style="@style/TextShadow.Black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:ellipsize="end"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:typefaceFromAssets="fonts/Roboto-Thin.ttf"/>

    <com.example.dmitry.handheld_dictionary.ui.view.TypefaceTextView
        android:id="@+id/group_header_date"
        style="@style/TextShadow.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:typefaceFromAssets="fonts/Roboto-Thin.ttf"/>

</LinearLayout>