<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/translate"
        style="@style/ListItemText"
        android:textStyle="italic"
        android:paddingLeft="@dimen/small_image_button_size"
        android:paddingRight="@dimen/small_image_button_size"/>

    <ImageButton
        android:id="@+id/word_context_button"
        android:layout_width="@dimen/small_image_button_size"
        android:layout_height="@dimen/small_image_button_size"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/transparent_button_bg"
        android:src="@drawable/ic_context_menu"
        android:scaleType="fitCenter"
        android:padding="15dp"
        android:contentDescription="@string/content_description_options"/>

</RelativeLayout>

