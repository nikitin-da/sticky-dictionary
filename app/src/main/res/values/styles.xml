<resources>

    <style name="AppTheme" parent="TranslucentStatusAppTheme">

        <item name="android:actionMenuTextColor">#ffffff</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="TranslucentStatusAppTheme" parent="BaseTheme"/>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="WordViewPagerIndicator">
        <item name="fillColor">@color/colorAccent</item>
        <item name="pageColor">#7733B5E5</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">5dp</item>
        <item name="centered">true</item>
    </style>

    <style name="TextShadow">
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="TextShadow.Black">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="TextShadow.White">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/white</item>
    </style>

    <style name="ListItemText" parent="TextShadow.Black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:paddingTop">@dimen/word_list_padding</item>
        <item name="android:paddingBottom">@dimen/word_list_padding</item>
    </style>

    <style name="FloatActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|right</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="FloatActionButton.Word">
        <item name="android:src">@drawable/ic_add_word</item>
        <item name="fab_colorNormal">@color/action_button_word_bg_normal</item>
        <item name="fab_colorPressed">@color/action_button_word_bg_pressed</item>
        <item name="fab_colorRipple">@color/action_button_word_bg_ripple</item>
    </style>

    <style name="FloatActionButton.Group">
        <item name="android:src">@drawable/ic_add_group</item>
        <item name="fab_colorNormal">@color/action_button_group_bg_normal</item>
        <item name="fab_colorPressed">@color/action_button_group_bg_pressed</item>
        <item name="fab_colorRipple">@color/action_button_group_bg_ripple</item>
    </style>

    <style name="Raised"/>

    <style name="CommonEditStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/fields_text_color</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FloatLabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fletTextAppearance">@style/FloatTitleTextAppearance</item>
        <item name="fletPaddingBottom">5dp</item>
    </style>

    <style name="FloatTitleTextAppearance" parent="TextShadow">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">@color/colorAccent</item>

    </style>

    <style name="CommonButton" parent="Raised">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/save_button_bg</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>

    <style name="CommonButton.Save">
        <item name="android:text">@string/edit_save_button</item>
    </style>

    <style name="NavigationDrawerItemContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/navigation_drawer_item_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="NavigationDrawerItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <style name="NavigationDrawerItemText" parent="TextShadow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/navigation_drawer_text</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:shadowColor">@color/navigation_drawer_shadow</item>
    </style>

    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="theme">@style/AppActionBar</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="AppActionBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <style name="GroupContextButton">
        <item name="android:layout_width">@dimen/small_image_button_size</item>
        <item name="android:layout_height">@dimen/small_image_button_size</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@drawable/common_button_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    
    <style name="ServiceText" parent="TextShadow.Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
